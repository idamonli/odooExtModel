<odoo>

     <record id="borrow_books_tran_form_view" model="ir.ui.view">
        <field name="name">借阅图书</field>
        <field name="model">borrow.books.tran</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="book_id" options="{'no_create_edit': True, 'no_create': True, 'no_open':True}"/>
                        <field name="borrow_number"/>
                    </group>
                    <group>
                        <field name="user_id" options="{'no_create_edit': True, 'no_create': True, 'no_open':True}"/>
                        <field name="borrow_time"/>
                        <field name="return_time"/>
                    </group>
                </group>
                <group string="借阅说明">
                    <field name="notes" nolabel="1" placeholder="借阅说明..."/>
                </group>
                <footer>
                    <button string="确认借阅" name="commit_borrow" type="object" class="oe_highlight"/>
                    <button string="取消" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="borrow_books_tran_action" model="ir.actions.act_window">
        <field name="name">借阅图书</field>
        <field name="res_model">borrow.books.tran</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="borrow_books_tran_menu" name="借阅图书" parent="borrow_menu" sequence="1" action="borrow_books_tran_action"/>

</odoo>