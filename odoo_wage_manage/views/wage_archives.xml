<odoo>

    <record id="wage_archives_tree_view" model="ir.ui.view">
        <field name="name">薪资档案</field>
        <field name="model">wage.archives</field>
        <field name="arch" type="xml">
            <tree default_order="id desc" decoration-bf="message_needaction==True" js_class="wage_archives_js_class">
                <field name="message_needaction" invisible="1"/>
                <field name="code"/>
                <field name="company_id"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <field name="base_wage"/>
                <field name="trial_period_salary"/>
                <field name="payroll_company"/>
                <field name="amount_total"/>
            </tree>
        </field>
    </record>

    <record id="wage_archives_form_view" model="ir.ui.view">
        <field name="name">薪资档案</field>
        <field name="model">wage.archives</field>
        <field name="arch" type="xml">
            <form>
                <header>
<!--                    <button name="get_info_by_dingding_hrm" type="object" string="从钉钉花名册获取资料"/>-->
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                        </button>
                    </div>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title" name="title">
                        <label for="code" class="oe_edit_only"/>
                        <h1>
                            <field name="code" placeholder="档案编号" readonly="1"/>
                        </h1>
                    </div>
                    <group col="2">
                        <group>
                            <field name="employee_id" required="1" options='{"no_open": "1","no_edit": "1","no_create": "1"}'/>
                            <field name="employee_code"/>
                            <field name="department_id" options='{"no_open": "1","no_edit": "1","no_create": "1"}'/>
                            <field name="job_id" options='{"no_open": "1","no_edit": "1","no_create": "1"}'/>
                        </group>
                        <group>
                            <field name="employee_type"/>
                            <field name="trial_period_start_date" attrs="{'invisible': [('employee_type','!=', 'probation')]}"/>
                            <field name="trial_period_end_date" attrs="{'invisible': [('employee_type','!=', 'probation')]}"/>
                            <label for="trial_period_salary" attrs="{'invisible': [('employee_type','!=', 'probation')]}"/>
                            <div class="o_row" name="wage" attrs="{'invisible': [('employee_type','!=', 'probation')]}">
                                <field name="trial_period_salary" nolabel="1" required="1"/>
                                <span>￥ / 月</span>
                            </div>
                            <label for="base_wage"/>
                            <div class="o_row" name="wage">
                                <field name="base_wage" nolabel="1" required="1"/>
                                <span>￥ / 月</span>
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page string="工资信息">
                            <field name="line_ids">
                                <tree editable="bottom" default_order="sequence">
                                    <field name="sequence" widget="handle"/>
                                    <field name="structure_id" required="1" options='{"no_open": "1","no_edit": "1","no_create": "1"}'/>
                                    <field name="wage_amount" required="1" sum="wage_amount"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                <div>
                                    <label for="amount_total"/>
                                </div>
                                <field name="amount_total" nolabel="1"/>
                            </group>
                            <field name="notes" class="oe_inline" placeholder="可输入备注信息..."/>
                            <div class="oe_clear"/>
                        </page>
                        <page string="其他">
                            <group col="2">
                                <group>
                                    <field name="bank_account_number"/>
                                    <field name="accountBank"/>
                                </group>
                                <group>
                                    <field name="payroll_company" options='{"no_open": "1","no_edit": "1","no_create": "1"}'/>
                                    <field name="household_id" options='{"no_open": "1","no_edit": "1","no_create": "1"}'/>
                                    <field name="company_id" required="1" options='{"no_open": "1","no_edit": "1","no_create": "1"}'/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="wage_archives_kanban">
        <field name="name">薪资档案看板</field>
        <field name="model">wage.archives</field>
        <field name="arch" type="xml">
            <kanban class="o_modules_kanban" js_class="wage_archives_kanban_js_class">
                <field name="code"/>
                <field name="image"/>
                <field name="company_id"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <field name="base_wage"/>
                <field name="trial_period_salary"/>
                <field name="payroll_company"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_module_vignette oe_kanban_global_click">
                            <div class="oe_kanban_avatar float-left mr-3">
<!--                                <field name="image" widget="image" class="oe_avatar"/>-->
                            </div>
                            <div class="oe_module_desc">
                                <h4 class="o_kanban_record_title">
                                    <field name="employee_id"/>
                                </h4>
                                <p class="oe_module_name">
                                    <field name="code"/>
                                </p>
                                <div class="oe_module_action" t-if="!selection_mode">
                                    <field name="department_id"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

     <record id="wage_archives_onboarding_view" model="ir.ui.view">
        <field name="name">薪资档案</field>
        <field name="model">wage.archives</field>
        <field name="inherit_id" ref="wage_archives_kanban"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//kanban" position="attributes">
                <attribute name="banner_route">/wage/wage_manage_onboarding_panel</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.actions.act_window" id="wage_archives_action">
        <field name="name">薪资档案</field>
        <field name="res_model">wage.archives</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="wage_archives_onboarding_view"/>
        <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    创建一个新的员工档案或初始化所有员工档案
                </p>
            </field>
    </record>

    <record model="ir.ui.view" id="wage_archives_search">
        <field name="model">wage.archives</field>
        <field name="arch" type="xml">
            <search string="薪资档案">
                <field name="code"/>
                <field name="company_id"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <field name="base_wage"/>
                <field name="payroll_company"/>
            </search>
        </field>
    </record>

    <menuitem id="wage_archives_menu" name="薪资档案" parent="main_menu" sequence="5"
              action="wage_archives_action"/>

</odoo>